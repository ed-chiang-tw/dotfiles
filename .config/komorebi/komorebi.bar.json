{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.34/schema.bar.json",
  "monitor": 0,
  "font_family": "JetBrains Mono",
  "theme": {
    "palette": "Base16",
    "name": "GoogleLight",
    "accent": "Base05"
  },
  "height": 30,
  "transparency_alpha": 255,
  "left_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": true,
          "display":"Text",
          "hide_empty_workspaces": true
        },
        "layout": {
          "enable": true,
          "display":"Icon"
        },
        "focused_window": {
          "enable": true,
          "show_icon": true
        }
      }
    }
  ],
  "right_widgets": [
    {
      "Update": {
        "enable": true
      }
    },
    {
      "Media": {
        "enable": false
      }
    },
    {
      "Network": {
        "enable": true,
        "show_total_data_transmitted": false,
        "show_network_activity": false
      }
    },
    {
      "Cpu": {
        "enable": true,
        "label_prefix":"Icon"
      }
    },
    {
      "Memory": {
        "enable": true,
        "label_prefix":"Icon"
      }
    },
    {
      "Date": {
        "enable": true,
        "format":"DayDateMonthYear",
        "label_prefix":"None"
      }
    },
    {
      "Time": {
        "enable": true,
        "format": "TwentyFourHourWithoutSeconds",
        "label_prefix":"None"
      }
    },
    {
      "Battery": {
        "enable": true
      }
    }
  ]
}
